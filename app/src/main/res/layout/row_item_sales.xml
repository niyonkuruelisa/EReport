<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lnl_row_client"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:background="@drawable/linear_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_client_profile"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/box"
            android:layout_margin="4dp"
            android:layout_gravity="center|top"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="7dp"
                    android:text="Company"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="7dp"
                    android:text="Product name"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_compny_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Sevenihills ltd"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/txt_company_tin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="1111111"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="13dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textStyle="normal"
                    android:textSize="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Paid"
                    android:textStyle="normal"
                    android:textSize="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Balance"
                    android:textSize="8dp"/>
                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:textSize="8dp"
                        android:text="Payment"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_product_total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="158555"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txt_product_paid_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="555"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txt_product_rest_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="5511"
                    android:textColor="@color/colorRed"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnl_status"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:textSize="8dp"

                        android:text="Status"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>